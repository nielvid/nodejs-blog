<%-include('head.ejs')%>
    <div class="container">
        <div class="row" >
            <div class="col-sm-8" >

                <h1>My Latest Post </h1>  
                <div id="message" style="color: aquamarine; font-size: 19px; background-color: chartreuse;">
                    <%- messages('message', locals) %>
                </div>
 
 <% Blog.forEach(item=>{ %>
<div>
   <a href="/post/<%=item._id %>"><h3><%=item.title%></h3></a>
    <h4><%=item.description%></h4>
    <p> <%= item.createdAt.toDateString()%></p>
    <p> <%= item.message%></p>
    
   

</div>
<% }) %>

            </div>
            
        </div>
    </div>
    <%-include('footer.ejs')%>
